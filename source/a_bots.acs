// =============================================================================
// [Dusk] BOT SUPPORT

#define MAX_BOTCLASSES 20
int BotClasses[MAX_BOTCLASSES] = {
	CLASS_Gunman,
	CLASS_Shotgunner,
	CLASS_Rifleman,
	CLASS_DoubleShotgunner,
	CLASS_MachineGunner,
	CLASS_Minigunner,
	CLASS_TiberiumAutorifleman,
	CLASS_Flamer,
	CLASS_Grenadier,
	CLASS_CombustionGunner,
	CLASS_Rocketeer,
	CLASS_ChemWarrior,
	CLASS_GaussGunner,
	CLASS_Artillery,
	CLASS_NailMachineGunner,
	CLASS_LaserRifleman,
	CLASS_ShockTrooper,
	CLASS_PlasmaGunner,
	CLASS_LaserChaingunner,
	CLASS_KarasawaSoldier,
};

script SC_BotEnter ENTER {
	if (!PlayerIsBot (PlayerNumber()))
		terminate;
	
	int i;
	delay (35);
	
	// Find a good class to take
	do {
		i = BotClasses[random (0, MAX_BOTCLASSES)];
		delay (5);
	} while (!PurchaseClass (i));
}

script SC_BotRespawn RESPAWN {
	ACS_ExecuteAlways (SC_BotEnter, 0);
}
