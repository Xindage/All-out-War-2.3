// A building is hit!
script SC_BUILDINGDAMAGE (void) {
	int what, team, found;
	for (int i = 0; i < MAX_BUILDINGS * 2 && !found; i++) {
		if (ActivatorTID() == BaseTIDs[i]) {
			what = i / 2;
			team = i % 2;
			found = true;
		}
	}
	
	if (!found)
		terminate;
	
	AwardBuildingDamage (what, team);
	
	// Update the health to clients
	SYNC_UpdateBuildingHealth (what, team);
}

#define SCORE_MIN_RATIO 0.0
#define SCORE_MAX_RATIO 1.5
#define SCORE_DENOMINATOR 450
function void AwardBuildingDamage (int what, int team) {
	int tid = MainTIDs[team][what];
	SetActivator (tid);
	
	int lasthealth = RecordedBuildingHealths[team][what]
	int health = GetHealth ();
	int spawnhealth = GetSpawnHealth ();
	
	if (health < 0)
		health = 0;
	
	// Save the current health now.
	RecordedBuildingHealths[team][what] = GetHealth ();
	
	SetActivatorToTarget (0); // target: building -> player
	// If player is attacking his own building via team damage dont give anything.
	if (team != PlayerTeam())
	{
		// The amount of points given is dependant on the health of the victim building.
		int damagescored = (lasthealth - health) << 16;
		int ratio = SCORE_MAX_RATIO - FixedMul ((SCORE_MAX_RATIO - SCORE_MIN_RATIO), ((health<<16) / spawnhealth));
		damagescored = FixedMul (damagescored, ratio);
		int points;

		// Calculate points. Remainder goes to unawarded damage counter
		if (damagescored >= 0) {
			UnawardedDamage[PlayerNumber ()] += damagescored;
			points = (UnawardedDamage[PlayerNumber ()] / SCORE_DENOMINATOR) >> 16;
		}

		UnawardedDamage[PlayerNumber ()] = FixedMod (UnawardedDamage[PlayerNumber ()], SCORE_DENOMINATOR<<16);

		/*
		print4f ("\cF%f \ch%f \cD%d \cG%f",
			ratio, damagescored, points, UnawardedDamage[PlayerNumber ()]);
		*/
		// Award the player
		if (points > 0) {
			AddExperience (points * 25);
			GiveCredits (points * 60);
			Team_GivePoints (PlayerTeam (), points, false);
		}
		// Award his team with charges, unless if its sudden death.
		if (!intHolder[i_SuddenDeath])
		{
			int charges = (damagescored / 2) >> 16;
			if (RepairCharges[PlayerTeam()] + charges >= BATTERY_MAX) RepairCharges[PlayerTeam()] = BATTERY_MAX;
			else RepairCharges[PlayerTeam()] += charges;
		}
	}
}

// [Xindage] Merge all the buiding death in a single script.
script "SC_structurefall" (int team, int what, int silent)
{
	str name;
	switch (what) {
		case 0:
			GotBarracks[team] = false;
			name = "Barracks";
			CallEvent (ACTION_DESTROY_BARRACKS, TEAM_BLUE);
			break;
		case 1:
			GotRefinery[team] = false;
			name = "Refinery";
			CallEvent (ACTION_DESTROY_REFINERY, TEAM_BLUE);
			break;
		case 2:
			GotPlant[team] = false;
			name = "Research Centre";
			CallEvent (ACTION_DESTROY_PLANT, TEAM_BLUE);
			break;
		case 3:
			GotFactory[team] = false;
			name = "War Factory";
			CallEvent (ACTION_DESTROY_FACTORY, TEAM_BLUE);
			break;
		case 4:
			GotRepair[team] = false;
			name = "Repair Facility";
			CallEvent (ACTION_DESTROY_REPAIR, team);
			break;
		case 5:
			GotObelisk[team] = false;
			name = "Obelisk";
			CallEvent (ACTION_DESTROY_OBELISK, team);
			break;
		default:
			// TODO: Add error handler.
			break;
        }
	if (what == 5)	// Repair faility only.
	{
		SetFont ("SMALLFONT");
		IntelMessage (strparam (n:0, s:"\cJ has destroyed\cJ\n", s:"\cdthe ", s:TeamColors[team() + 2], s:TeamNames[team], s:" ", s:name, s:" \cd !"), true);
	}
	else // All others
	{
		SetFont("BIGFONT");
		HudMessageBold(s:"The ", s:TeamColors[team() + 2], s:TeamNames[team], s:" ", s:name, s:" \cd has been destroyed!!";
		HUDMSG_FADEOUT, 0, CR_Green, 0.5, 0.7, 2.0, 1.0);
		ACS_ExecuteAlways(99, 0, team);
	}
	Log(n:0, s:" destroys "	s:TeamNames[team], s:" " s:name, s:".");
	Thing_Destroy				(MainTIDs[team][what],0);
	Thing_Destroy				(BTOsTIDs[team][what],0);
	AwardBuildingDestruction	(team, false);
	AwardBuildingDamage			(what, team);
	SYNC_UpdateBuildingHealth	(what, team);
	delay(12); // Give some time before deleting those.
	Thing_Remove				(MainTIDs[team][what],0);
	Thing_Remove				(BTOsTIDs[team][what],0);
}

