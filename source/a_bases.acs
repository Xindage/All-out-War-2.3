				SetLineTexture(11,SIDE_FRONT,TEXTURE_BOTTOM,"MCT2");
				SetLineTexture(11,SIDE_BACK,TEXTURE_BOTTOM,"MCT2");
				break;
			case 6:
				SetLineTexture(2,SIDE_FRONT,TEXTURE_BOTTOM,"MCT2");
				SetLineTexture(2,SIDE_BACK,TEXTURE_BOTTOM,"MCT2");
				ReddenSector (3);
				break;
			case 7:
				SetLineTexture(6,SIDE_FRONT,TEXTURE_BOTTOM,"MCT2");
				SetLineTexture(6,SIDE_BACK,TEXTURE_BOTTOM,"MCT2");
				ReddenSector (6);
				break;
			case 8:
				SetLineTexture(8,SIDE_FRONT,TEXTURE_BOTTOM,"MCT2");
				SetLineTexture(4,SIDE_FRONT,TEXTURE_MIDDLE,"MCT3");
				SetLineTexture(8,SIDE_BACK,TEXTURE_BOTTOM,"MCT2");
				SetLineTexture(4,SIDE_BACK,TEXTURE_MIDDLE,"MCT3");
				ReddenSector (8);
				break;
			case 9:
				SetLineTexture(10,SIDE_FRONT,TEXTURE_BOTTOM,"MCT2");
				SetLineTexture(10,SIDE_BACK,TEXTURE_BOTTOM,"MCT2");
				ReddenSector (11);
				ReddenSector (12);
				break;
			case 10:
				ReddenSector (15);
				ReddenSector (16);
				break;
			case 11:
				ReddenSector (20);
				SetLineTexture(12,SIDE_FRONT,TEXTURE_BOTTOM,"MCT2");
				SetLineTexture(12,SIDE_BACK,TEXTURE_BOTTOM,"MCT2");
				break;
		}
	}
	else
	{
		// 3D mode
		// Blue is 100 - Red is 200, simple.
		int tnb = team ? 100+(what*10) : 200+(what*10);
		// tnb stand for team nunber & building.
		// "what" multiplied by 10 tells the structures tags.
		// Do what is default in every building:
		for (int id = 0 + tnb; id < 10 + tnb; id++)
			{
			ReddenSector(tnb);
			}
		SetLineTexture(0 + tnb, SIDE_FRONT,	TEXTURE_MIDDLE, "MCT6");
		SetLineTexture(1 + tnb, SIDE_FRONT,	TEXTURE_BOTTOM, "MCT6");
		SetLineTexture(9 + tnb, SIDE_BACK,	TEXTURE_MIDDLE, "-");
		SetLineTexture(9 + tnb, SIDE_FRONT,	TEXTURE_MIDDLE, "-");
		switch (what) // Switch handle special lines ids only.
		{
			case 1:
				// REF
				SetLineTexture(2 + tnb,SIDE_FRONT,TEXTURE_MIDDLE,"BTERREF1");
				SetLineTexture(3 + tnb,SIDE_FRONT,TEXTURE_BOTTOM,"BTERREF1");
				break;
