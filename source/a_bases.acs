				SetLineTexture(3 + tnb,SIDE_FRONT,TEXTURE_BOTTOM,"BTERRES1");
				break;
			case 3:
				// WAR
				SetLineTexture(2 + tnb,SIDE_FRONT,TEXTURE_MIDDLE,"BTERWAR1");
				SetLineTexture(3 + tnb,SIDE_FRONT,TEXTURE_BOTTOM,"BTERWAR1");
				break;
			case 4:
				ChangeFloor(9 + tnb, "MCT6");
				break;
		}
	}
}
